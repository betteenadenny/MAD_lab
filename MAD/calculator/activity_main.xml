<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/tv"
        android:textSize="75dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:gravity="fill"
            android:id="@+id/b1"
            android:text="1"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/b2"
            android:text="2"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:gravity="fill"
            android:id="@+id/b3"
            android:text="3"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/add"
            android:text="+"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/b4"
            android:text="4"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/b5"
            android:text="5"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:gravity="fill"
            android:id="@+id/b6"
            android:text="6"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/sub"
            android:text="-"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/b7"
            android:text="7"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/b8"
            android:text="8"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:gravity="fill"
            android:id="@+id/b9"
            android:text="9"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/mul"
            android:text="*"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/b0"
            android:text="0"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/div"
            android:text="/"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:gravity="fill"
            android:id="@+id/clear"
            android:text="AC"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:gravity="fill"
            android:id="@+id/equal"
            android:text="="
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>


    </GridLayout>


</LinearLayout>
