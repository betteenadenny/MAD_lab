<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/tv"
        android:textSize="50dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="4">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="fill"
            android:id="@+id/B1"
            android:textSize="50dp"
            android:text="1"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B2"
        android:textSize="50dp"
        android:text="2"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B3"
        android:textSize="50dp"
        android:text="3"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B4"
        android:textSize="50dp"
        android:text="4"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B5"
        android:textSize="50dp"
        android:text="5"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B6"
        android:textSize="50dp"
        android:text="6"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B7"
        android:textSize="50dp"
        android:text="7"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B8"
        android:textSize="50dp"
        android:text="8"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B9"
        android:textSize="50dp"
        android:text="9"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B10"
        android:textSize="50dp"
        android:text="0"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B11"
        android:textSize="50dp"
        android:text="+"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B12"
        android:textSize="50dp"
        android:text="-"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B13"
        android:textSize="50dp"
        android:text="*"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B14"
        android:textSize="50dp"
        android:text="/"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B15"
        android:textSize="50dp"
        android:text="="/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/B16"
        android:textSize="50dp"
        android:text="AC"/>


    </GridLayout>




</androidx.appcompat.widget.LinearLayoutCompat>